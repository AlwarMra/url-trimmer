<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL TRIMMER</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css
    "
    />
  </head>
  <body>
    <div class="container">
      <h1>URL TRIMMER</h1>
      <form action="/shortUrls" method="POST" class="my-4 d-flex gap-2">
        <label class="visually-hidden" for="url">Url</label>
        <input
          type="url"
          name="url"
          id="url"
          placeholder="URL"
          required
          class="form-control mr-2 col"
        />
        <button class="btn btn-success" type="submit">Short</button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(url => { %>
          <tr>
            <td><a href="<%= url.full %>"><%= url.full %></a></td>
            <td><a href="<%= url.short %>"><%= url.short %></a></td>
            <td><%= url.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
